<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollDaily"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.magdalena.nlife.DailyIntakeActivity">

    <RelativeLayout
        android:id="@+id/activity_daily_intake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Spinner
            android:id="@+id/spinnerNutrients1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients1"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients2"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients3"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients4"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/buttonNutrients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinnerNutrients5"
            android:layout_marginBottom="15dp"
            android:background="@color/color1"
            android:text="Show"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonNutrients">

            <TextView
                android:id="@+id/tvCurrentDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="The graph below shows your daily intake"
                android:textAlignment="center"
                android:textColor="@color/color1" />

        </LinearLayout>


        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_below="@id/llTitle" />

        <LinearLayout
            android:id="@+id/dailyNutrientsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/graph"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dailyNutrient1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/dailyNutrient2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/dailyNutrient3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/dailyNutrient4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/dailyNutrient5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>