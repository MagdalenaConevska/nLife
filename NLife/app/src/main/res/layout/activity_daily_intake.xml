<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daily_intake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.magdalena.nlife.DailyIntakeActivity">

    <Spinner
        android:id="@+id/spinnerNutrients1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/spinnerNutrients2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/spinnerNutrients1"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/spinnerNutrients3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/spinnerNutrients2"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/spinnerNutrients4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/spinnerNutrients3"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/spinnerNutrients5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/spinnerNutrients4"
        android:spinnerMode="dialog" />

    <Button
        android:text="Show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerNutrients5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/color1"
        android:layout_marginBottom="15dp"
        android:id="@+id/buttonNutrients" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNutrients"
        android:id="@+id/llTitle" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCurrentDay"
        android:text="The graph below shows your daily intake"
        android:textColor="@color/color1"
        android:textAlignment="center"
        android:layout_marginLeft="20dp" />

    </LinearLayout>


    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_below="@id/llTitle"
        android:id="@+id/graph" />

</RelativeLayout>
