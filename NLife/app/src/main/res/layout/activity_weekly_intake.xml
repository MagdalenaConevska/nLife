<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollWeekly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.magdalena.nlife.WeeklyIntakeActivity">

    <RelativeLayout
        android:id="@+id/activity_weekly_intake"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Spinner
            android:id="@+id/spinnerNutrients6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients6"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients7"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients8"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/spinnerNutrients10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerNutrients9"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dialog" />

        <Button
            android:id="@+id/buttonNutrientsWeekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/spinnerNutrients10"
            android:layout_marginBottom="15dp"
            android:background="@color/color1"
            android:text="Show"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/llTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonNutrientsWeekly">

            <TextView
                android:id="@+id/tvWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="The graph below shows your weekly intake"
                android:textAlignment="center"
                android:textColor="@color/color1" />

        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_below="@id/llTitle2" />

        <LinearLayout
            android:id="@+id/dailyNutrientsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/graph2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weeklyNutrient1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/weeklyNutrient2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/weeklyNutrient3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/weeklyNutrient4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

            <TextView
                android:id="@+id/weeklyNutrient5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:textColor="@color/color1" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>